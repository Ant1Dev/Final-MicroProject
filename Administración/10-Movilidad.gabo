            Otro_Caso
                Mostrar << "Ingrese el nombre del Aparato Movil";
                Leer >> Admin.Movil[I].Nombre;
        Fin_Caso

        Mostrar << "Ingrese la ID del Aparato Movil";
        Leer >> ID;
        Mientras (ID < 1) Hacer;
            Mostrar << "Solo valores positivos";
            Leer >> ID;
        Fin_Mientras
        Admin.Movil[I].ID = ID;

        Mostrar << "Ingrese las cantidades del Aparato Movil";
        Leer >> Cant;
        Mientras (Cant < 0) Hacer;
            Mostrar << "Solo valores mayores a 0";
            Leer >> Cant;
        Fin_Mientras
        Admin.Movil[I].Cantidad = Cant;

        Mostrar << "Seleccione el Estado del Aparato Móvil";
        Mostrar << "1: Operativo";
        Mostrar << "2: En Mantenimiento";
        Mostrar << "3: Pendiente de Limpieza";
        Mostrar << "4: Retirado";
        Mostrar << "5: Préstamo Externo";
        Leer >> OpcE;
        Mientras (OpcE < 1 Or OpcE > 5) Hacer;
            Mostrar << "Solo valores entre 1-5";
            Leer >> OpcE;
        Fin_Mientras

        En_Caso (OpcE > 0) Sea;
            Caso(OpcE = 1);
                Admin.Movil[I].Estado = "Operativo";
            Caso(OpcE = 2);
                Admin.Movil[I].Estado = "En Mantenimiento";
            Caso(OpcE = 3);
                Admin.Movil[I].Estado = "Pendiente de Limpieza";
            Caso(OpcE = 4);
                Admin.Movil[I].Estado = "Retirado";
            Otro_Caso
                Admin.Movil[I].Estado = "Préstamo Externo";
        Fin_Caso

        Mostrar << "Ingrese dia de Mantenimiento";
        Leer >> Dia;
        Mientras (Dia < 1 Or Dia > 31) Hacer;
            Mostrar << "Solo valores entre 1-31";
            Leer >> Dia;
        Fin_Mientras
        Admin.Movil[I].FechaM.Dia = Dia;

        Mostrar << "Ingrese mes de Mantenimiento";
        Leer >> Mes;
        Mientras (Mes < 1 Or Mes > 12) Hacer;
            Mostrar << "Solo valores entre 1-12";
            Leer >> Mes;
        Fin_Mientras
        Admin.Movil[I].FechaM.Mes = Mes;

        Mostrar << "Ingrese Año de Mantenimiento";
        Leer >> Year;
        Mientras (Year < 2026) Hacer;
            Mostrar << "Solo valores mayores a 2026";
            Leer >> Year;
        Fin_Mientras
        Admin.Movil[I].FechaM.Year = Year;

        Mostrar << "Seleccione el nombre del Proveedor";
